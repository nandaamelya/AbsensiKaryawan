<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exsoft.nandaamelyar.absensikaryawan.MainActivity" >

    <EditText
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="Nama"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtKelas"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:background="#bb56"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtKelas"
        android:layout_marginTop="21dp"
        android:onClick="save"
        android:text="Simpan" />

    <EditText
        android:id="@+id/txtKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNama"
        android:layout_alignRight="@+id/txtNama"
        android:layout_below="@+id/txtNama"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Jabatan" />

    <ListView
        android:id="@+id/listKaryawan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/txtNama"
        android:layout_alignRight="@+id/txtNama"
        android:ems="10"
        android:h
        android:layout_below="@+id/btnSimpan">

    </ListView>

</RelativeLayout>
